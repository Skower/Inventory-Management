<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :brand, style: "display: block" %>
    <%= form.text_field :brand, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :cost, style: "display: block" %>
    <%= form.text_field :cost, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :location_id, style: "display: block" %>
    <%= form.collection_select :location_id, Location.all, :id, :name, prompt: true %>	 
  </div>
  
  <br/>
  <div>
    <%= form.submit class:"btn btn-primary"%>
  </div>
<% end %>
