<p style="color: green"><%= notice %></p>

<div id="items">
  <table class="table">

    <thead>
      <tr>
        <th>Name</th>
        <th>Brand</th>
        <th>Cost</th>
        <th>Quantity</th>
        <th>Location</th>
        <th></th>
      </tr>
    </thead>
  
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.brand %></td>
        <td><%= item.cost %></td>
        <td><%= item.quantity %></td>
        <td><%= link_to item.location.name , item.location %></td>
        <td><%= link_to "Show", item , class:"btn btn-secondary"%><td>
      </tr>
      <% end %>
    </tbody>
  
  </table>
  
</div>

<%= link_to "New Item", new_item_path, class:"btn btn-primary" %>